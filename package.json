{
	"name": "nl2rss",
	"version": "0.1.0",
	"license": "MIT",
	"author": "Valentin Gorrin <valentin@gorr.in> (https://tree.gorr.in)",
	"description": "Convert any newsletter to rss feed",
	"homepage": "https://github.com/h33n0k/nl2rss",
	"repository": {
		"type": "git",
		"url": "https://github.com/h33n0k/nl2rss"
	},
	"bugs": {
		"url": "https://github.com/h33n0k/nl2rss/issues"
	},
	"main": "dist/index.js",
	"bin": "dist/index.js",
	"scripts": {
		"start": "cross-env NODE_ENV=production node dist/src/index.js",
		"dev": "cross-env NODE_ENV=production LOG_LEVEL=debug ts-node-dev --quiet --clear --rs --transpile-only src/index.ts",
		"build": "cross-env NODE_ENV=production npx tsc -p ./tsconfig.build.json",
		"test": "cross-env NODE_ENV=development LOG_LEVEL=DEBUG jest",
		"clean": "rm -rf dist/",
		"format": "prettier --write \"**/*.ts\"",
		"lint": "eslint -c ./eslint.config.mjs \"./**/*.ts\" --fix",
		"release": "standard-version",
		"prepare": "husky"
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@faker-js/faker": "^9.6.0",
		"@types/config": "^3.3.5",
		"@types/express": "^5.0.0",
		"@types/imap": "^0.8.42",
		"@types/jest": "^29.5.14",
		"@types/mailparser": "^3.4.5",
		"@types/morgan": "^1.9.9",
		"@types/node": "^22.13.4",
		"@types/supertest": "^6.0.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"globals": "^15.15.0",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"prettier": "^3.5.1",
		"standard-version": "^9.5.0",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.1"
	},
	"dependencies": {
		"config": "^3.3.12",
		"effect": "^3.13.1",
		"express": "^4.21.2",
		"imap": "^0.8.19",
		"mailparser": "^3.7.2",
		"moment": "^2.30.1",
		"morgan": "^1.10.0",
		"reflect-metadata": "^0.2.2",
		"sequelize": "^6.37.6",
		"sequelize-typescript": "^2.1.6",
		"sqlite3": "^5.1.7",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"zod": "^3.24.2"
	}
}
